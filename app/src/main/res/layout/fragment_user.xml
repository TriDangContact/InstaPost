<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="3dp">

    <!-- put whatever you want -->


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fm_user_image"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/profile_icon"/>

        <TextView
            android:id="@+id/fm_user_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/fm_user_image"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textStyle="bold"
            tools:text="item_1_username" />

        <TextView
            android:id="@+id/fm_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm_user_username"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/fm_user_image"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="item_1_name" />

        <TextView
            android:id="@+id/fm_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fm_user_name"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/fm_user_image"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="item_1_email" />

    </RelativeLayout>

</android.support.v7.widget.CardView>